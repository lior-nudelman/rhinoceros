<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
   http://www.springframework.org/schema/beans     
   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
   http://www.springframework.org/schema/context 
   http://www.springframework.org/schema/context/spring-context-3.1.xsd">


	<context:component-scan base-package="com.rhino.fe.controller" />

	<bean id="props" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	  <property name="locations" value="classpath:/rhino.properties"/>
	</bean>

	<bean class="com.rhino.fe.validetor.UserValidetor" />

	<bean class="com.rhino.fe.validetor.UserNoEmailValidator" />

	<bean class="com.rhino.fe.google.GoogleAuthHelper" >
		<property name="clientId" value="${google.clientId}" />
		<property name="clientSecret" value="${google.clientSecret}" />
		<property name="callbackUri" value="${google.callbackUri}" />
	</bean>

	<bean class="com.rhino.userAttributesServic.UserManagerImpl">
			<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- Register the Customer.properties -->
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename" value="UserGui" />
	</bean>

	<import resource="security.xml" />
</beans>
